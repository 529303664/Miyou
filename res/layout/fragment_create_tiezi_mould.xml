<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridView
            android:id="@+id/create_tiezi_gridview"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" 
            >

        </GridView>
        <View
        android:id="@+id/create_tiezi_mould_spliter1"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@+id/create_tiezi_gridview"
         />
        <TextView 
        android:id="@+id/create_tiezi_mould_return"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/create_tiezi_mould_spliter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_action_undo"
        android:text="@string/returntext"
        />
    </RelativeLayout>

</ScrollView>